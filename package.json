{
  "name": "world-cup",
  "version": "0.0.1",
  "description": "Create races based on strava segments",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm-run-all --parallel install:*",
    "install:api": "cd world-cup-api && npm i",
    "install:app": "cd world-cup-app && npm i",
    "start:api-local": "cd world-cup-api && npm run start:local",
    "start:api-dev": "cd world-cup-api && npm run start",
    "start:api-prod": "cd world-cup-api && npm run start:prod",
    "start:front-local": "cd world-cup-app && npm run start",
    "start:front-dev": "cd world-cup-app && start:dev",
    "start:front-prod": "cd world-cup-app && npm run start:prod",
    "test:watch:api": "cd world-cup-api && npm run test:watch",
    "test": "npm-run-all --parallel test:*",
    "test:api": "cd world-cup-api && npm test",
    "test:app": "cd world-cup-app && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ElPonito/world-cup.git"
  },
  "author": "Cedric Guerin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ElPonito/world-cup/issues"
  },
  "homepage": "https://github.com/ElPonito/world-cup#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.1"
  }
}
